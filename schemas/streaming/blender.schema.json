{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/blender.schema.json",
    "title": "Blender",
    "version": "1.0.0",
    "description": "Asynchronous topics merging.",
    "type": "object",
    "properties": {
        "epoch": {
            "title": "Synched time, POSIX in seconds. ",
            "type": "integer"
        },
        "flights": {
            "type": "array",
            "title": "Flights data",
            "items": { "$ref": "#/$defs/flight" }
        }
    },
    "required": ["points4d"],
    "$defs": {
        "id": {
            "description": "Unique identifier",
            "type": "string"
        },
        "point4d": {
            "title": "Point 4D",
            "description": "A time-space position on earth",
            "type": "object",
            "properties": {
                "epoch": {
                    "title": "Time, POSIX in seconds",
                    "type": "integer"
                },
                "lat": {
                    "description": "Latitude in degrees",
                    "type": "number"
                },
                "lng": {
                    "description": "Longitude in degrees",
                    "type": "number"
                },
                "alt": {
                    "description": "Altitude in feet",
                    "type": "number"
                }
            },
            "required": ["epoch", "lat", "lng", "alt"]
        },
        "flight": {
            "title": "Flight data",
            "type": "object",
            "properties": {
                "id": { "$ref": "#/$def/id" },
                "gs": {
                    "description": "Aircraft groundspeed in kts",
                    "type": "number"
                },
                "track": {
                    "description": "Aircraft heading in degrees",
                    "type": "integer"
                },
                "flightLevel": {
                    "description": "Aircraft flight level, eg. FLXXX",
                    "type": "integer"
                },
                "selectedAlt": {
                    "description": "Selected altitude in ft",
                    "type": "integer"
                },
                "selectedFlightLevel": {
                    "description": "Mode-S selected flight level, eg. FLXXX",
                    "type": "integer"
                },
                "verticalSpeed": {
                    "description": "Vertical speed as feet per minute",
                    "type": "integer"
                },
                "callsign": {
                    "description": "Callsign identifying the flight. Typically, ICAO airline code plus IATA/ticketing flight number, or the aircraft registration",
                    "type": "integer"
                },
                "aprtDeparture": {
                    "description": "Departure airport. ICAO format",
                    "type": "integer"
                },
                "aprtArrival": {
                    "description": "Arrival airport. ICAO format",
                    "type": "integer"
                },
                "points4d": {
                    "title": "Flight positions",
                    "type": "object",
                    "properties": {
                        "message": {
                            "title": "Last trusted position from source",
                            "$ref": "#/$defs/point4d"
                        },
                        "synced": {
                            "title": "Last trusted position extrapolated to current time.",
                            "$ref": "#/$defs/point4d"
                        },
                        "projected": {
                            "title": "Last trusted position extrapolated 60s ahead of current time",
                            "$ref": "#/$defs/point4d"
                        }
                    }
                },
                "nct": {
                    "$ref": "#/$defs/nct"
                },
                "pcds": {
                    "title": "Potential conflicts detected",
                    "type": "array",
                    "items": { "$ref": "#/$defs/pcd" }
                }
            },
            "required": [
                "id",
                "gs",
                "track",
                "flightLevel",
                "selectedAlt",
                "selectedFlightLevel",
                "verticalSpeed",
                "callsign",
                "aprtDeparture",
                "aprtArrival",
                "points4d",
                "nct",
                "pcds"
            ]
        },
        "nct": {
            "title": "Non-conflicting status",
            "type": "object",
            "properties": {
                "id": { "$ref": "#/$def/id" },
                "flightId": {
                    "description": "Flight unique identifier",
                    "type": "string"
                },
                "sectorId": {
                    "description": "Sector unique identifier",
                    "type": "string"
                },
                "isNct": {
                    "title": "True if the flight is non-conflicting",
                    "type": "boolean"
                },
                "mode": {
                    "title": "Calculation method",
                    "enum": ["acg", "soft"]
                },
                "showHalo": {
                    "description": "True if flight transitions from non-conflicting to potential conflict",
                    "type": "boolean"
                },
                "epoch": {
                    "description": "Calculation time, POSIX in seconds",
                    "type": "integer"
                },
                "projExit": {
                    "description": "Last projected position estimated to be non-conflicting.",
                    "$ref": "#/$defs/point4d"
                }
            },
            "required": ["id", "flightId", "sectorId", "isNct", "mode", "showHalo", "epoch", "projExit"]
        },
        "pcd": {
            "title": "Potential conflict detected",
            "type": "object",
            "properties": {
                "id": { "$ref": "#/$def/id" },
                "isFirst": {
                    "title": "Flag true if ownship crosses first",
                    "type": "boolean"
                },
                "segEpoch": {
                    "title": "Time to CPA, POSIX in seconds",
                    "type": "integer"
                },
                "segDist": {
                    "title": "Distance at CPA in NM",
                    "type": "number"
                },
                "isPcd": {
                    "title": "Flag true if and only if pcd is a potential conflict",
                    "type": "boolean"
                },
                "mode": {
                    "type": "Calculation mode",
                    "enum": ["enhanced", "horizontal"]
                },
                "epoch": {
                    "title": "Calculation time, POSIX in seconds",
                    "type": "integer"
                },
                "currentDist": {
                    "title": "Current aircraft distance in NM",
                    "type": "number"
                },
                "ownship": {
                    "title": "Ownship flight",
                    "$ref": "#/$def/pcdFlightSyncedInfo"
                },
                "intruder": {
                    "title": "Intruder flight",
                    "$ref": "#/$defs/pcdFlightSyncedInfo"
                }
            },
            "required": [
                "id",
                "isFirst",
                "segEpoch",
                "segDist",
                "isPcd",
                "mode",
                "epoch",
                "currentDist",
                "ownship",
                "intruder"
            ]
        },
        "pcdFlightSyncedInfo": {
            "type": "object",
            "properties": {
                "id": { "$ref": "#/$def/id" },
                "points4d": {
                    "title": "Flight positions",
                    "type": "object",
                    "properties": {
                        "cpa": {
                            "title": "Closes point of approach",
                            "$ref": "#/$defs/point4d"
                        },
                        "synced": {
                            "title": "Last trusted position extrapolated to current time.",
                            "$ref": "#/$defs/point4d"
                        }
                    },
                    "required": ["cpa", "synced"]
                }
            },
            "required": ["id", "points4d"]
        }
    }
}
