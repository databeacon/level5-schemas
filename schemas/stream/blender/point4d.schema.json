{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/databeacon/level5-schemas/main/schemas/stream/blender/point4d.schema.json",
    "version": "1.0.0",
    "title": "Point 4D",
    "description": "A time-space position on earth",
    "type": "object",
    "properties": {
        "epoch": {
            "title": "Time, POSIX in seconds",
            "type": "integer"
        },
        "lat": {
            "description": "Latitude in degrees",
            "type": "number"
        },
        "lng": {
            "description": "Longitude in degrees",
            "type": "number"
        },
        "alt": {
            "description": "Altitude in feet",
            "type": "number"
        }
    },
    "additionalProperties": false,
    "required": ["epoch", "lat", "lng", "alt"]
}
